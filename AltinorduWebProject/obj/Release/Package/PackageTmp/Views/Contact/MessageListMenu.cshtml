@using Entities
@using Entities
@using PagedList
@using PagedList.Mvc

<div class="col-md-3">
    <a href="@Url.Action("NewMessage","Contact")" class="btn btn-primary btn-block mb-3">Yeni Mesaj Oluştur</a>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Seçenekler</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item active">
                    <a href="@Url.Action("Index","Contact")" class="nav-link">
                        <i class="fas fa-inbox"></i> Gelen Mesajlar
                        <span class="badge bg-primary float-right"></span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Message","Contact")" class="nav-link">
                        <i class="far fa-file-alt"></i> Cevaplanmamış Mesajlar
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("MessageOk","Contact")" class="nav-link">
                        <i class="far fa-envelope-open"></i> Cevaplanan Mesajlar
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("SendMailBox","Contact")" class="nav-link">
                        <i class="far fa-envelope"></i> Gönderilen Mesajlar
                    </a>
                </li>
            </ul>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
    <!-- /.card -->
</div>
