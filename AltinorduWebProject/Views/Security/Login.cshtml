@using Entities
@model  Kullanici
@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <title>Giriş Yap</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/css/social-media-color.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/AdminLTE-3.0.4/login-form-14/css/style.css">

</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Başkana İlet !</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-12 col-lg-10">
                    <div class="wrap d-md-flex">
                        <div class="img" style="background-image: url(/AdminLTE-3.0.4/login-form-14/images/askintoren3.jpg);">
                        </div>
                        <div class="login-wrap p-4 p-md-5">
                            <div class="d-flex">
                                <div class="w-100">
                                    <h3 class="mb-4">Giriş Yap</h3>
                                </div>
                                @*<div class="w-100">
                                    <p class="social-media d-flex justify-content-end">
                                        <a href="https://tr-tr.facebook.com/torenaskin/" class="fa fa-facebook"></a><span>&nbsp;</span>
                                        <a href="https://twitter.com/AskinToren1?ref_src=twsrc%5Egoogle%7Ctwcamp%5Eserp%7Ctwgr%5Eauthor" class="fa fa-twitter"></a><span>&nbsp;</span>
                                        <a href="https://www.instagram.com/torenaskn/?hl=tr" class="fa fa-instagram"></a><span>&nbsp;</span>
                                    </p>
                                </div>*@
                            </div>
                            @using (Html.BeginForm("Login","Security", FormMethod.Post))
                            {
                                <form action="#" class="signin-form">
                                    <div class="form-group mb-3">
                                        <label class="label" for="name">Kullanıcı Adı</label>
                                        <input type="text" name="KullaniciAdi" class="form-control" placeholder="Kullanıcı Adı" required>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label class="label" for="password">Parola</label>
                                        <input type="password" name="Sifre" class="form-control" placeholder="Parola" required>
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="form-control btn btn-primary rounded submit px-3">Giriş Yap</button>
                                    </div>
                                    <div class="form-group">
                                        @if (ViewBag.Result != null)
                                        {
                                            <div class="alert alert-@ViewBag.Status" role="alert">
                                                @ViewBag.Result
                                            </div>
                                        }
                                    </div>
                                    <div class="form-group d-md-flex">
                                        <div class="w-50 text-left">
                                            <label class="checkbox-wrap checkbox-primary mb-0">
                                                Beni Hatırla
                                                <input type="checkbox" checked>
                                                <span class="checkmark"></span>
                                            </label>
                                        </div>
                                        <div class="w-50 text-md-right">
                                            <a href="#">Parolamı Unuttum</a>
                                        </div>
                                    </div>
                                </form>
                            }
                                <p class="text-center"><b><i>" İnsana Hizmet ve Hürmet Eden Belediyecilik !"</i></b></br> <a href="https://www.altinordu.bel.tr/">Aşkın Tören - Altınordu Belediye Başkanı</a></p>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/AdminLTE-3.0.4/login-form-14/js/jquery.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-14/js/popper.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-14/js/bootstrap.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-14/js/main.js"></script>

</body>
</html>

